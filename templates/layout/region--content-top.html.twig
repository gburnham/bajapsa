{#
/**
 * @file
 * Default theme implementation to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}
{% if apsamisc_contenttype() == "committee" %}
<div class="content-top">
        <div class="row">
                <div class="col-xs-12 text-center">
                        {% if content %}
                            {{ content }}
                        {% endif %}
                        {% if apsamisc_userhasrole(user.id) %}
                           <a class="committeetrigger" data-id="overview">Overview</a> | <a class="committeetrigger" data-id="gettingstarted">Getting Started</a> | <a class="committeetrigger" data-id="documents">Documents</a>
                        {% endif %}
                </div>
        </div>
</div>
{% endif %}

